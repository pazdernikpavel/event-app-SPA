{
  "extends": ["tslint-angular", "tslint:recommended"],
  "rulesDirectory": [
    "node_modules/codelyzer",
    "node_modules/tslint-eslint-rules/dist/rules",
    "node_modules/tslint-origin-ordered-imports-rule/dist",
    "node_modules/tslint-consistent-codestyle/rules",
    "node_modules/tslint-rxjs-subject-restrictions-rule/dist"
  ],
  "rules": {
    "arrow-parens": [true, "ban-single-arg-parens"],
    "component-class-suffix": true,
    "component-selector": [true, "element", "slido", "kebab-case"],
    "curly": [
      true,
      "ignore-same-line"
    ],
    "deprecation": {
      "severity": "warning"
    },
    "directive-class-suffix": true,
    "directive-selector": [true, "attribute", "slido", "camelCase"],
    "interface-name": false,
    "max-line-length": [true, 120],
    "member-access": true,
    "member-ordering": [true, {"order": "instance-sandwich"}],
    "no-console": true,
    "no-duplicate-variable": true,
    "no-empty": false,
    "no-empty-interface": false,
    "no-unused": true,
    "no-forward-ref": false,
    "template-no-negated-async": false,
    "no-inferrable-types": true,
    "no-input-rename": true,
    "no-multi-spaces": true,
    "no-output-rename": true,
    "no-redundant-jsdoc": true,
    "object-curly-spacing": [true, "always"],
    "object-literal-sort-keys": false,
    "ordered-imports": true,
    "quotemark": [true, "single"],
    "semicolon": [true, "always", "ignore-bound-class-methods"],
    "trailing-comma": [true, {"multiline": "never", "singleline": "never"}],
    "use-life-cycle-interface": true,
    "use-pipe-transform-interface": true,
    "variable-name": [true, "ban-keywords", "check-format", "allow-leading-underscore", "allow-snake-case"],
    "typedef": [
      true,
      "call-signature",
      "parameter",
      "property-declaration"
    ],
    "origin-ordered-imports": [
      true,
      "one-blank-line"
    ]
  }
}
